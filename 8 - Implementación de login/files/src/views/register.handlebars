<div>
  <h2>Registrate</h2>

  <form action="register" method="post">

    <p>Nombre</p>
    <input type="text" name="nombre" id="email" placeholder="Tu nombre" />

    <p>Apellido</p>
    <input type="text" name="apellido" id="email" placeholder="Tu apellido" />

    <p>Email</p>
    <input type="text" name="email" id="email" placeholder="user@gmail.com" />

    <p>Password</p>
    <input
      type="text"
      name="password"
      id="password"
      placeholder="************"
    />

    <button type="submit" id="btn">Registrarse</button>
  </form>
</div>

