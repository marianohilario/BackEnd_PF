    <h2 class="text-center mb-3">Products Manager</h2>

    <div class="row mb-5">
        <div class="col-md-7 mx-auto">
            <div class="card bg-primary text-white">
                <div class="card-header pt-3">
                    <h4 class="text-center">
                    Edit Product
                    </h4>
                </div>
                <div class="card-body">
                    <form action="/api/products/{{id}}?_method=PUT" method="POST">
                    <input type="hidden" name="_method" value="PUT">
                        <div class="mb-3">
                            <label for="title">Title:</label>
                            <input
                            type="text"
                            class="form-control bg-dark text-white"
                            name="title"
                            placeholder="Product Title"
                            value="{{title}}"
                            />
                        </div>
                        <div class="mb-3">
                            <label for="description">Description:</label>
                            <textarea name="description" class="form-control bg-dark text-white" 
                            placeholder="Product Description">{{description}}</textarea>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label for="code">Code:</label>
                                    <input
                                    type="text"
                                    class="form-control bg-dark text-white"
                                    name="code"
                                    placeholder="Code"
                                    value="{{code}}"
                                    />
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label for="price">Price:</label>
                                    <input
                                    type="number"
                                    class="form-control bg-dark text-white"
                                    name="price"
                                    placeholder="Price"
                                    value="{{price}}"
                                    min="1"
                                    />
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-4">
                                <div class="mb-3">
                                    <label for="stock">Stock</label>
                                    <input
                                    type="number"
                                    class="form-control bg-dark text-white"
                                    name="stock"
                                    placeholder="Available Stock"
                                    value="{{stock}}"
                                    min="1"
                                    />
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="mb-3">
                                    <label for="category">Category:</label>
                                    <input
                                    type="text"
                                    class="form-control bg-dark text-white"
                                    name="category"
                                    placeholder="Category"
                                    value="{{category}}"
                                    />
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="mb-3">
                                    <label for="thumbnail">Imagen:</label>
                                    <input
                                    type="text"
                                    class="form-control bg-dark text-white"
                                    name="thumbnail"
                                    placeholder="Link to Thumbnail"
                                    value="{{thumbnail}}"
                                    />
                                </div>
                            </div>
                        </div>

                        <button class="btn btn-success btn-block w-100 mt-4" type="submit"> Submit </button>

                    </form>
                </div>
            </div>
        </div>
    </div>