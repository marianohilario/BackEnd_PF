<div>
    <h2>Agregar un producto</h2>
    <form action="http://localhost:8080/api/products" method="post">
        <label>Titulo</label> <br>
        <input type="text" name="title" id="title"> <br>

        <label>Descripcion</label> <br>
        <input type="text" name="description" id="description"> <br>

        <label>Code</label> <br>
        <input type="text" name="code" id="code"> <br>

        <label>Precio</label> <br>
        <input type="number" name="price" id="price"> <br>

        <label>Stock</label> <br>
        <input type="number" name="stock" id="stock"> <br>

        <label>Categoria</label> <br>
        <input type="text" name="category" id="category"> <br>

        <label>Imagen</label> <br>
        <input type="text" name="thumbnail" id="thumbnail"> <br>

        <button type="submit">Agregar Producto</button>
    </form>

    <h2>Elimine un producto</h2>
    <form action="http://localhost:8080/api/products/{{this._id}}" method="delete">
        <label>Ingrese el id del producto a eliminar</label> <br>
        <input type="text" name="title" id="productDelete"> <br>

        {{!--<input type="submit" id="deleteProduct" value="Eliminar Producto">--}}
        <input type="submit" value="Eliminar Producto">
    </form>

    <h2>Todos los Productos</h2>

    <div id="container"></div>
</div>

<script src="/socket.io/socket.io.js"></script>
<script src="../public/js/index.js"></script>