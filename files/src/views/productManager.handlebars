
    <h2 class="text-center mb-3">Products Manager</h2>

    <div class="row">
        {{#if productos}}
        <div class="col-md">
            <div class="card bg-primary pb-2 shadow">
                <div class="row mx-3 mt-3">
                    {{#each productos}}
                    <div class="card mb-2">
                        <div class="row g-0">
                            <div class="col-md-2 d-flex">
                                <img src="{{thumbnail}}" class="img-fluid rounded-start mx-auto my-auto" alt="{{title}}"  style="max-height: 140px;">
                            </div>
                            <div class="col-md-8">
                                <div class="card-body">
                                    <h5 class="card-title mb-3">{{ title }}</h5>
                                    <p class="card-title mb-3">{{ description }}</p>
                                    <p class="card-text mb-1"> Stock: <b> {{ stock }} </b> </p>
                                    <p class="card-text"> Price: <b> $ {{ price }} </b> </p>
                                </div>
                            </div>
                            <div class="col-md-2 d-flex justify-content-center align-items-center">
                              <form action="/api/products/{{id}}?_method=DELETE" method="POST">
                                  <input type="hidden" name="_method" value="DELETE">
                                  <button class="btn btn-danger editDeleteSize" type="submit"> <i class="bi bi-trash3-fill"></i> Delete </button>
                              </form>
                            </div>
                        </div>
                    </div>
                    {{/each}}
                </div>
            </div>
        </div>
        {{else}}
        <div class="col-md">
            <div class="card bg-primary pb-2">
                <div class="row mx-3 mt-3">
                    <div class="card mb-2">
                        <div class="row g-0">
                            <div class="col-md">
                                <div class="card-body">
                                    <h5 class="card-title mb-3">There are no products in your catalog...</h5>
                                </div>
                            </div>        
                        </div>
                    </div>
                </div>
            </div>
        </div>
        {{/if}}
        <div class="mt-3">
            <ul class="pagination pagination-sm">
                {{#if hasPrevPage}}
                <li class="page-item">
                    <a class="page-link" href="?page={{prevPage}}&&limit={{limit}}">&laquo;</a>
                </li>
                {{/if}}
                {{#if hasPrevPage}}
                <li class="page-item">
                    <a class="page-link" href="?page={{prevPage}}&&limit={{limit}}">{{prevPage}}</a>
                </li>
                {{/if}}
                <li class="page-item active">
                    <a class="page-link" href="#">{{page}}</a>
                </li>
                {{#if hasNextPage}}
                <li class="page-item">
                    <a class="page-link" href="?page={{nextPage}}&&limit={{limit}}">{{nextPage}}</a>
                </li>
                {{/if}}
                {{#if hasNextPage}}
                <li class="page-item">
                    <a class="page-link" href="?page={{nextPage}}&&limit={{limit}}">&raquo;</a>
                </li>
                {{/if}}
            </ul>
        </div>
    </div>